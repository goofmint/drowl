#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Run code quality checks before commit
echo "ğŸ” Running code quality checks..."

# Run linting
echo "ğŸ“ Running ESLint..."
pnpm lint || {
  echo "âŒ ESLint failed. Please fix linting errors before committing."
  exit 1
}

# Run type checking
echo "ğŸ” Running TypeScript type check..."
pnpm typecheck || {
  echo "âŒ Type check failed. Please fix type errors before committing."
  exit 1
}

# Run format check
echo "âœ¨ Checking code formatting..."
pnpm format:check || {
  echo "âŒ Format check failed. Run 'pnpm format' to fix formatting."
  exit 1
}

echo "âœ… All checks passed! Proceeding with commit."
