# drowl Development Environment Configuration
# Copy this file to .env and customize as needed

# ============================================================================
# PostgreSQL Configuration
# ============================================================================
POSTGRES_DB=drowl
POSTGRES_USER=drowl
POSTGRES_PASSWORD=drowl_dev_password
POSTGRES_PORT=5432

# ============================================================================
# MinIO Configuration (S3-compatible object storage)
# ============================================================================
MINIO_ROOT_USER=drowl
MINIO_ROOT_PASSWORD=drowl_dev_password_minio
MINIO_API_PORT=9000
MINIO_CONSOLE_PORT=9001

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_PASSWORD=drowl_dev_password_redis
REDIS_PORT=6379

# ============================================================================
# Application Configuration
# ============================================================================

# API (Control Plane) - Hono on Node.js
API_PORT=3001
API_HOST=0.0.0.0
API_LOG_LEVEL=debug

# Worker (Data Plane) - Hono on Node.js
WORKER_PORT=3002
WORKER_HOST=0.0.0.0
WORKER_LOG_LEVEL=debug

# UI (Product Dashboard) - React + Vite
UI_PORT=3000
UI_HOST=0.0.0.0

# Landing (Marketing Site) - Astro
LANDING_PORT=4321
LANDING_HOST=0.0.0.0

# ============================================================================
# Database Connection URLs (for apps)
# ============================================================================
DATABASE_URL=postgresql://drowl:drowl_dev_password@localhost:5432/drowl
REDIS_URL=redis://:drowl_dev_password_redis@localhost:6379

# ============================================================================
# MinIO/S3 Configuration (for apps)
# ============================================================================
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=drowl
S3_SECRET_KEY=drowl_dev_password_minio
S3_BUCKET=drowl-events
S3_REGION=us-east-1

# ============================================================================
# Security & Secrets
# ============================================================================
# WARNING: These are development defaults. NEVER use these in production!
# Generate secure values using: openssl rand -base64 32

JWT_SECRET=dev_jwt_secret_change_in_production
SESSION_SECRET=dev_session_secret_change_in_production
ENCRYPTION_KEY=dev_encryption_key_change_in_production

# ============================================================================
# Development Configuration
# ============================================================================
NODE_ENV=development
LOG_LEVEL=debug

# Set to 'true' to enable debug features
DEBUG=false

# ============================================================================
# HTTPS Configuration (for nginx)
# ============================================================================
# Local development domain (add to /etc/hosts: 127.0.0.1 drowl.test)
DOMAIN=drowl.test
